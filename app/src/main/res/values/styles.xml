<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="listPreferredItemHeightSmall">60dp</item>
        <item name="listPreferredItemPaddingLeft">30dp</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="NavigationViewItemTextAppearance">
        <item name="android:fontFamily">@font/norwester</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="WhiteTextInput" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
    </style>

</resources>
